<odoo>
    <!-- Root Menu -->
    <menuitem id="school_menu_root" name="School"/>

    <!-- Students Menu -->
    <menuitem id="menu_school_students" name="Students" parent="school_menu_root"/>

    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_student_action" name="Manage Students"
              parent="menu_school_students"
              action="student_information.action_school_student"/>
<!--dashboard-->

    <!-- Correct Client Action -->
    <record id="action_school_dashboard_client" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">school_dashboard_action</field>
    </record>

    <!-- Correct Dashboard Menu -->
    <menuitem id="menu_school_dashboard"
              name="Dashboard"
              parent="school_menu_root"
              sequence="4"
              action="student_information.action_school_dashboard_client"/>







    <!-- Teachers Menu -->
    <menuitem id="menu_school_teachers" name="Teachers" parent="school_menu_root"/>

    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_teacher_action" name="Manage Teachers"
              parent="menu_school_teachers"
              action="student_information.action_school_teacher"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_school_configuration" name="Configuration" parent="school_menu_root" sequence="3"/>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_class_action" name="Classes"
              parent="menu_school_configuration"
              action="student_information.action_school_class"
              sequence="1"/>

    <record id="action_school_section" model="ir.actions.act_window">
        <field name="name">Sections</field>
        <field name="res_model">school.section</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_section_action" name="Sections"
              parent="menu_school_configuration"
              action="student_information.action_school_section"
              sequence="2"/>

    <record id="action_school_institution" model="ir.actions.act_window">
        <field name="name">Institutions</field>
        <field name="res_model">school.institution</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_school_institution_action" name="Institutions"
              parent="menu_school_configuration"
              action="student_information.action_school_institution"
              sequence="3"/>


</odoo>
